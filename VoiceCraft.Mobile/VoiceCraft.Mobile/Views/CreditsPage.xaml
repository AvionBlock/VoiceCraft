<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:app="clr-namespace:VoiceCraft.Mobile"
             x:Class="VoiceCraft.Mobile.Views.CreditsPage">
    <Grid>
        <Image Source="{AppThemeBinding Dark=bgdark, Light=bglight}"
               Aspect="AspectFill"/>

        <Grid RowDefinitions="auto">
            <Frame>
                <Label Text="Credits" 
                       FontSize="25"
                       FontAttributes="Bold"/>
            </Frame>

            <Frame Grid.Row="1">
                <Grid>
                    <Label Text="Author: SineVector241"
                           FontSize="20"
                           FontAttributes="Bold" />

                    <Label Grid.Row="1"
                           Text="Contributors: N.A."
                           FontSize="20"
                           FontAttributes="Bold" />

                    <Label Grid.Row="2"
                           Text="{Binding Source={Static app:App.Version}, StringFormat='Version: {0}' }"
                           FontSize="20"
                           FontAttributes="Bold" />
                </Grid>
            </Frame>
        </Grid>
    </Grid>
</ContentPage>