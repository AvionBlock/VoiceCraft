<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="VoiceCraft.Mobile.Views.EditPage"
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:VoiceCraft.Mobile.ViewModels"
             Shell.TabBarIsVisible="False">

    <ContentPage.BindingContext>
        <vm:EditPageViewModel />
    </ContentPage.BindingContext>

    <Grid>
        <Image Aspect="AspectFill" Source="{AppThemeBinding Dark=bgdark, Light=bglight}" />
        <ScrollView>
            <Grid Grid.RowDefinitions="auto">
                <Frame>
                    <Label FontAttributes="Bold"
                           FontSize="25"
                           Text="Edit Server" />
                </Frame>

                <Frame Grid.Row="1">
                    <Grid RowDefinitions="auto, auto, auto, auto, auto, auto, auto, auto, auto" VerticalOptions="StartAndExpand">
                        <Label FontAttributes="Bold"
                               FontSize="25"
                               HorizontalTextAlignment="Center"
                               Text="{Binding Server.Name}" />

                        <Label Grid.Row="1"
                               Margin="0,20,0,0"
                               FontAttributes="Bold"
                               FontSize="15"
                               Text="Server IP" />

                        <Entry Grid.Row="2"
                               Keyboard="Text"
                               MaxLength="40"
                               Placeholder="127.0.0.1"
                               Text="{Binding Server.IP}" />

                        <Label Grid.Row="3"
                               Margin="0,20,0,0"
                               FontAttributes="Bold"
                               FontSize="15"
                               Text="Server Port" />

                        <Entry Grid.Row="4"
                               Keyboard="Numeric"
                               Placeholder="9050"
                               Text="{Binding Server.Port}" />

                        <Label Grid.Row="5"
                               Margin="0,20,0,0"
                               FontAttributes="Bold"
                               FontSize="15"
                               Text="Key" />

                        <Entry Grid.Row="6"
                               Keyboard="Numeric"
                               Placeholder="9050"
                               Text="{Binding Server.Key}" />

                        <Button Grid.Row="7"
                                Command="{Binding EditServerCommand}"
                                Text="Save Edits" />

                        <Button Grid.Row="8"
                                Command="{Binding CancelCommand}"
                                Text="Cancel" />
                    </Grid>
                </Frame>
            </Grid>
        </ScrollView>
    </Grid>
</ContentPage>