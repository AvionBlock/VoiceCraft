<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:VoiceCraft.Client.ViewModels"
             xmlns:locale="using:Jeek.Avalonia.Localization"
             mc:Ignorable="d"
             d:DesignWidth="800"
             d:DesignHeight="450"
             x:DataType="vm:Settings.AdvancedSettingsViewModel"
             x:Class="VoiceCraft.Client.Views.Settings.AdvancedSettingsView">
    <Grid RowDefinitions="Auto, *">
        <Grid Grid.Row="0"
              Margin="0,0,0,10"
              Background="{DynamicResource BackgroundBrush}">
            <TextBlock Margin="10"
                       VerticalAlignment="Center"
                       FontSize="20"
                       FontWeight="Bold"
                       Text="{locale:Localize Settings.Advanced}"
                       TextAlignment="Center" />
            <Button Padding="10"
                    VerticalAlignment="Stretch"
                    Background="Transparent"
                    Command="{Binding CancelCommand}"
                    CornerRadius="0">
                <PathIcon Data="{DynamicResource ArrowLeftRegular}" />
            </Button>
        </Grid>
        <Border Grid.Row="1"
                VerticalAlignment="Top"
                Margin="10,0,10,10"
                Padding="15"
                Classes="card">
            <StackPanel Spacing="10">
                <Button HorizontalAlignment="Stretch"
                        Command="{Binding TriggerGcCommand}">
                    <TextBlock Text="{locale:Localize Settings.Advanced.TriggerGc}" />
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>