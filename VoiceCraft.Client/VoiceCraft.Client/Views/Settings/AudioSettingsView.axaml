<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:VoiceCraft.Client.ViewModels"
             xmlns:locale="using:Jeek.Avalonia.Localization"
             xmlns:registered="clr-namespace:VoiceCraft.Client.Services"
             mc:Ignorable="d"
             d:DesignWidth="800"
             d:DesignHeight="450"
             x:DataType="vm:Settings.AudioSettingsViewModel"
             x:Class="VoiceCraft.Client.Views.Settings.AudioSettingsView">
    <Grid RowDefinitions="Auto, *">
        <Grid Grid.Row="0"
              Margin="0,0,0,10"
              Background="{DynamicResource BackgroundBrush}">
            <TextBlock Margin="10"
                       VerticalAlignment="Center"
                       FontSize="20"
                       FontWeight="Bold"
                       Text="{locale:Localize Settings.Audio}"
                       TextAlignment="Center" />
            <Button Padding="10"
                    VerticalAlignment="Stretch"
                    Background="Transparent"
                    Command="{Binding CancelCommand}"
                    CornerRadius="0">
                <PathIcon Data="{DynamicResource ArrowLeftRegular}" />
            </Button>
        </Grid>
        <Border Grid.Row="1"
                VerticalAlignment="Top"
                Margin="10,0,10,10"
                Padding="15"
                Classes="card">
            <StackPanel Spacing="10">
                <TextBlock HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           FontSize="15"
                           Text="{locale:Localize Settings.Audio.InputDevices}" />
                <ComboBox HorizontalAlignment="Stretch"
                          ItemsSource="{Binding AudioSettings.InputDevices}"
                          SelectedItem="{Binding AudioSettings.InputDevice}" />

                <TextBlock HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           FontSize="15"
                           Text="{locale:Localize Settings.Audio.OutputDevices}" />

                <ComboBox HorizontalAlignment="Stretch"
                          ItemsSource="{Binding AudioSettings.OutputDevices}"
                          SelectedItem="{Binding AudioSettings.OutputDevice}" />

                <TextBlock HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           FontSize="15"
                           Text="{locale:Localize Settings.Audio.Denoisers}" />

                <ComboBox HorizontalAlignment="Stretch"
                          ItemsSource="{Binding AudioSettings.Denoisers}"
                          SelectedValue="{Binding AudioSettings.Denoiser}"
                          SelectedValueBinding="{Binding Id}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate DataType="{x:Type registered:RegisteredDenoiser}">
                            <TextBlock Text="{Binding Name}" />
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <TextBlock HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           FontSize="15"
                           Text="{locale:Localize Settings.Audio.AutomaticGainControllers}" />

                <ComboBox HorizontalAlignment="Stretch"
                          ItemsSource="{Binding AudioSettings.AutomaticGainControllers}"
                          SelectedValue="{Binding AudioSettings.AutomaticGainController}"
                          SelectedValueBinding="{Binding Id}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate DataType="{x:Type registered:RegisteredAutomaticGainController}">
                            <TextBlock Text="{Binding Name}" />
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <TextBlock HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           FontSize="15"
                           Text="{locale:Localize Settings.Audio.EchoCancelers}" />

                <ComboBox HorizontalAlignment="Stretch"
                          ItemsSource="{Binding AudioSettings.EchoCancelers}"
                          SelectedValue="{Binding AudioSettings.EchoCanceler}"
                          SelectedValueBinding="{Binding Id}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate DataType="{x:Type registered:RegisteredEchoCanceler}">
                            <TextBlock Text="{Binding Name}" />
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <StackPanel>
                    <!-- I know this is shit, but it works, There might be a better way but idgaf! -->
                    <Grid ColumnDefinitions="Auto, Auto">
                        <TextBlock Grid.Column="0" VerticalAlignment="Center"
                                   Text="{locale:Localize Settings.Audio.MicrophoneSensitivity}" />
                        <TextBlock Grid.Column="1" VerticalAlignment="Center"
                                   Text="{Binding AudioSettings.MicrophoneSensitivity, StringFormat='{} {0:P0}'}" />
                    </Grid>

                    <Slider Maximum="1.0"
                            Minimum="0.0"
                            Value="{Binding AudioSettings.MicrophoneSensitivity}" />
                </StackPanel>

                <StackPanel>
                    <TextBlock HorizontalAlignment="Left"
                               VerticalAlignment="Center"
                               FontSize="15"
                               Text="{locale:Localize Settings.Audio.MicrophoneTest}" />

                    <Grid Margin="0,10,0,0" ColumnDefinitions="Auto, *">
                        <ToggleButton Grid.Column="0"
                                      HorizontalAlignment="Stretch"
                                      Command="{Binding TestRecorderCommand}"
                                      IsChecked="{Binding IsRecording}">
                            <TextBlock Text="{locale:Localize Settings.Audio.MicrophoneTest.Test}" />
                        </ToggleButton>
                        <ProgressBar Grid.Column="1"
                                     MinWidth="10"
                                     Margin="1"
                                     HorizontalAlignment="Stretch"
                                     VerticalAlignment="Stretch"
                                     Maximum="1"
                                     Minimum="0"
                                     ShowProgressText="True"
                                     Value="{Binding MicrophoneValue}"
                                     Classes.IsDetectingVoice="{Binding DetectingVoiceActivity}">
                            <ProgressBar.Styles>
                                <Style Selector="ProgressBar.IsDetectingVoice">
                                    <Style.Setters>
                                        <Setter Property="Background" Value="#AA008800" />
                                    </Style.Setters>
                                </Style>
                            </ProgressBar.Styles>
                        </ProgressBar>
                    </Grid>
                </StackPanel>

                <ToggleButton HorizontalAlignment="Stretch"
                              Command="{Binding TestPlayerCommand}"
                              IsChecked="{Binding IsPlaying}">
                    <TextBlock Text="{locale:Localize Settings.Audio.TestOutput}" />
                </ToggleButton>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>