<UserControl x:Class="VoiceCraft.Client.Views.Home.SettingsView"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:VoiceCraft.Client.ViewModels.Home"
             xmlns:locale="using:Jeek.Avalonia.Localization"
             d:DesignHeight="450"
             d:DesignWidth="800"
             x:DataType="vm:SettingsViewModel"
             mc:Ignorable="d">
    <ScrollViewer>
        <StackPanel>
            <Button HorizontalAlignment="Stretch"
                    Command="{Binding GoToGeneralSettingsCommand}"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    Margin="0"
                    Height="50">
                <TextBlock FontSize="16"
                           VerticalAlignment="Center"
                           FontWeight="Bold"
                           Text="{locale:Localize 'Settings.General.General'}" />
            </Button>
            
            <Button HorizontalAlignment="Stretch"
                    Command="{Binding GoToAppearanceSettingsCommand}"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    Margin="0"
                    Height="50">
                <TextBlock FontSize="16"
                           VerticalAlignment="Center"
                           FontWeight="Bold"
                           Text="{locale:Localize 'Settings.Appearance.Appearance'}" />
            </Button>

            <Button HorizontalAlignment="Stretch"
                    Command="{Binding GoToAudioSettingsCommand}"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    Margin="0"
                    Height="50">
                <TextBlock FontSize="16"
                           VerticalAlignment="Center"
                           FontWeight="Bold"
                           Text="{locale:Localize 'Settings.Audio.Audio'}" />
            </Button>
            
            <Button HorizontalAlignment="Stretch"
                    Command="{Binding GoToNetworkSettingsCommand}"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    Margin="0"
                    Height="50">
                <TextBlock FontSize="16"
                           VerticalAlignment="Center"
                           FontWeight="Bold"
                           Text="{locale:Localize 'Settings.Network.Network'}" />
            </Button>

            <Button HorizontalAlignment="Stretch"
                    Command="{Binding GoToAdvancedSettingsCommand}"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    Margin="0"
                    Height="50">
                <TextBlock FontSize="16"
                           VerticalAlignment="Center"
                           FontWeight="Bold"
                           Text="{locale:Localize 'Settings.Advanced.Advanced'}" />
            </Button>
        </StackPanel>
    </ScrollViewer>
</UserControl>