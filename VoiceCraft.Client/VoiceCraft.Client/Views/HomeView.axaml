<UserControl x:Class="VoiceCraft.Client.Views.HomeView"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:VoiceCraft.Client.ViewModels"
             d:DesignHeight="450"
             d:DesignWidth="800"
             x:DataType="vm:HomeViewModel"
             mc:Ignorable="d">
    <Grid RowDefinitions="Auto, *">
        <Grid Grid.Row="0"
              Margin="0,0,0,10"
              Background="{DynamicResource BackgroundBrush}">
            <TextBlock Grid.Column="0"
                       Margin="10"
                       VerticalAlignment="Center"
                       FontSize="20"
                       FontWeight="Bold"
                       Text="{Binding Title}"
                       TextAlignment="Center" />
        </Grid>
        <Grid Grid.Row="1"
              ColumnDefinitions="{OnFormFactor 'Auto, *', Mobile='*'}"
              RowDefinitions="{OnFormFactor '*', Mobile='*, Auto'}">
            <ListBox Grid.Row="{OnFormFactor '0', Mobile='1'}"
                     Grid.Column="0"
                     HorizontalAlignment="{OnFormFactor 'Stretch', Mobile='Center'}"
                     VerticalAlignment="{OnFormFactor 'Top', Mobile='Bottom'}"
                     CornerRadius="{OnFormFactor '0,5,5,0', Mobile='5,5,0,0'}"
                     ItemsSource="{Binding Items}"
                     SelectedItem="{Binding SelectedListItem}">
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="{OnFormFactor 'Vertical', Mobile='Horizontal'}" />
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
                <ListBox.ItemTemplate>
                    <DataTemplate DataType="{x:Type vm:ListItemTemplate}">
                        <PathIcon Data="{Binding Icon}"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <TransitioningContentControl Grid.Row="0"
                                         Grid.Column="{OnFormFactor '1', Mobile='0'}"
                                         Margin="10,0,10,0"
                                         Content="{Binding Content}" />
        </Grid>
    </Grid>
</UserControl>