<UserControl x:Class="VoiceCraft.Client.Views.EditServerView"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:server="clr-namespace:VoiceCraft.Client.Models.Settings"
             xmlns:vm="clr-namespace:VoiceCraft.Client.ViewModels"
             xmlns:locale="using:Jeek.Avalonia.Localization"
             d:DesignHeight="450"
             d:DesignWidth="800"
             x:DataType="vm:EditServerViewModel"
             mc:Ignorable="d">
    <Grid RowDefinitions="Auto, *">
        <Grid Grid.Row="0"
              Margin="0,0,0,10"
              Background="{DynamicResource BackgroundBrush}">
            <TextBlock Margin="10"
                       VerticalAlignment="Center"
                       FontSize="20"
                       FontWeight="Bold"
                       Text="{Binding EditableServer.Name}"
                       TextAlignment="Center" />
            <Button Padding="10"
                    VerticalAlignment="Stretch"
                    Background="Transparent"
                    Command="{Binding CancelCommand}"
                    CornerRadius="0">
                <PathIcon Data="{DynamicResource ArrowLeftRegular}" />
            </Button>
        </Grid>

        <ScrollViewer Grid.Row="1"
                      Margin="10,0,10,10">
            <Border Padding="15"
                    VerticalAlignment="Top"
                    Classes="card">
                <StackPanel Spacing="15">
                    <TextBlock Text="{locale:Localize 'EditServer.Name'}" />
                    <TextBox MaxLength="{x:Static server:Server.NameLimit}" Text="{Binding EditableServer.Name}" />
                    <TextBlock Text="{locale:Localize 'EditServer.IP'}" />
                    <TextBox MaxLength="{x:Static server:Server.IpLimit}" Text="{Binding EditableServer.Ip}" />
                    <TextBlock Text="{locale:Localize 'EditServer.Port'}" />
                    <NumericUpDown Increment="1"
                                   Maximum="65535"
                                   Minimum="0"
                                   Value="{Binding EditableServer.Port}" />
                    <Button HorizontalAlignment="Stretch"
                            VerticalAlignment="Center"
                            Command="{Binding EditServerCommand}">
                        <TextBlock Text="{locale:Localize 'EditServer.EditServer'}" TextAlignment="Center" />
                    </Button>
                </StackPanel>
            </Border>
        </ScrollViewer>
    </Grid>
</UserControl>