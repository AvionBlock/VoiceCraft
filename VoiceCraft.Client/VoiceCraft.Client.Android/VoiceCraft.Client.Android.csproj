<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net8.0-android</TargetFramework>
    <SupportedOSPlatformVersion>21</SupportedOSPlatformVersion>
    <Nullable>enable</Nullable>
    <ApplicationId>com.CompanyName.VoiceCraft.Client</ApplicationId>
    <ApplicationVersion>1</ApplicationVersion>
    <ApplicationDisplayVersion>1.0</ApplicationDisplayVersion>
    <AndroidPackageFormat>apk</AndroidPackageFormat>
    <AndroidEnableProfiledAot>false</AndroidEnableProfiledAot>
    <Platforms>AnyCPU</Platforms>
  </PropertyGroup>
  <ItemGroup>
    <None Remove="lib\arm64-v8a\libm.so.6" />
    <None Remove="lib\arm64-v8a\libopenal.so.6" />
    <None Remove="lib\arm64-v8a\libstdc++.so.6" />
  </ItemGroup>
  <ItemGroup>
    <AndroidNativeLibrary Include="lib\arm64-v8a\libm.so.6" />
    <AndroidNativeLibrary Include="lib\arm64-v8a\libopenal.so.6" />
    <AndroidNativeLibrary Include="lib\arm64-v8a\libstdc++.so.6" />
  </ItemGroup>

  <ItemGroup>
    <AndroidResource Include="Icon.png">
      <Link>Resources\drawable\Icon.png</Link>
    </AndroidResource>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Avalonia.Android" Version="11.1.3" />
    <PackageReference Include="OpusSharp.Android" Version="1.0.2" />
    <PackageReference Include="Silk.NET.OpenAL.Soft.Native" Version="1.23.1" />
    <PackageReference Include="Xamarin.AndroidX.Core.SplashScreen" Version="1.0.1.11" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\VoiceCraft.Client\VoiceCraft.Client.csproj" />
  </ItemGroup>
</Project>
