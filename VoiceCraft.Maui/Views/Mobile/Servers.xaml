<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="VoiceCraft.Maui.Views.Mobile.Servers"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:VoiceCraft.Maui.ViewModels"
             Title="Servers">

    <ContentPage.BindingContext>
        <vm:ServersViewModel />
    </ContentPage.BindingContext>
    <Grid>
        <Image Aspect="AspectFill" Source="{AppThemeBinding Default='bgdark.png', Dark='bgdark.png', Light='bglight.png'}" />
        <ScrollView>
            <Label FontSize="Large" Text="MOBILE" />
        </ScrollView>
    </Grid>

</ContentPage>
