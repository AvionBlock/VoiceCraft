<Styles x:Class="VoiceCraft.Client.Plugin.Assets.VCStyles"
        xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Styles.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceInclude Source="/Assets/VCColors.axaml" />
                <MergeResourceInclude Source="/Assets/VCResources.axaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Styles.Resources>

    <StyleInclude Source="avares://Notification.Avalonia/Themes/Generic.xaml" />

    <Style Selector="Image.backgroundImage">
        <Setter Property="Source" Value="{DynamicResource backgroundImage}" />
        <Setter Property="Stretch" Value="UniformToFill" />
        <Setter Property="Opacity" Value="150" />
    </Style>

    <Style Selector="ListBox">
        <Setter Property="Background" Value="{DynamicResource backgroundBrush}" />
    </Style>

    <Style Selector="Expander">
        <Setter Property="Background" Value="{DynamicResource backgroundBrush}" />
    </Style>

    <Style Selector="TextBlock">
        <Setter Property="TextWrapping" Value="Wrap" />
    </Style>

    <Style Selector="Border.card">
        <Setter Property="CornerRadius" Value="5" />
        <Setter Property="Background" Value="{DynamicResource backgroundBrush}" />
    </Style>
</Styles>
