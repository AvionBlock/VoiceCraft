<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Button Colors -->
    <SolidColorBrush x:Key="buttonColor" Color="#467379"/>
    <SolidColorBrush x:Key="buttonColorHover" Color="#b2ebf2"/>

    <!-- Background Colors -->
    <Color x:Key="backgroundLighter">Gray</Color>
    <Color x:Key="backgroundPrimary2">#0A3340</Color>
    <Color x:Key="backgroundPrimary">#181F2B</Color>
    <Color x:Key="backgroundDarker">DarkGray</Color>
    <SolidColorBrush x:Key="btnTextColor" Color="#FFB300"></SolidColorBrush>
    
    <!-- Volume Bars -->
    <Color x:Key="volumeBar1">Aqua</Color>
    <Color x:Key="volumeBar2">Yellow</Color>
    
    <!-- User Container Background -->
    <SolidColorBrush x:Key="containerBackground" Color="DarkCyan"/>

    <!-- Text Color -->
    <SolidColorBrush x:Key="textColor" Color="White"/>

</ResourceDictionary>