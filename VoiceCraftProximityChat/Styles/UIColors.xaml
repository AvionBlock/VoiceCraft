<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Button Colors -->
    <SolidColorBrush x:Key="buttonColor" Color="#81b9bf"/>
    <SolidColorBrush x:Key="buttonColorHover" Color="#b2ebf2"/>

    <!-- Background Colors -->
    <Color x:Key="backgroundLighter">Gray</Color>
    <Color x:Key="backgroundPrimary2">#555</Color>
    <Color x:Key="backgroundPrimary">Gray</Color>
    <Color x:Key="backgroundDarker">DarkGray</Color>
    <SolidColorBrush x:Key="btnTextColor" Color="DarkBlue"></SolidColorBrush>
    
    <!-- Volume Bars -->
    <Color x:Key="volumeBar1">Aqua</Color>
    <Color x:Key="volumeBar2">Yellow</Color>
    
    <!-- User Container Background -->
    <SolidColorBrush x:Key="containerBackground" Color="#81b9bf"/>

    <!-- Text Color -->
    <SolidColorBrush x:Key="textColor" Color="White"/>

</ResourceDictionary>